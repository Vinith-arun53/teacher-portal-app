<div class="registeration-container">
    <div class="rc-body">
    
    <h1>Login</h1>
    <%= form_with url: sessions_path, method: :post, local: true do |form| %>
    <div class="form-group">
        <%= form.label "Username:" %>
        <%= form.text_field :u_user_name, required: true, class: "form-control" %>
    </div>

    <div class="form-group:">
        <%= form.label "Password:" %>
        <%= form.password_field :password, required: true, class: "form-control" %>
    </div>

    <div class="submit">
        <%= form.submit "Login", class: "btn btn-dark" %>
    </div>
    <% end %>

    <%= link_to "Sign Up", new_user_path %>
</div>
</div>

